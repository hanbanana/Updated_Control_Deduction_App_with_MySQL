<div style="margin-left: 200px; margin-right: 200px; font-size: 13px">

  <br>
  <h2>Truck</h2>
  {{!-- <label class="heading">Owner History</label> --}}
  <br>
  <a href="/information_pages/create_information_truck" style="font-size: 20px">Create</a>
  <br><br>

  <div class="form-group" style="width: 1000px">
    <fieldset>
      <form action="" class="form-group">

        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
            <tr>
              {{!-- <th scope="col" data-sortable="true">ID#</th> --}}
              <th scope="col">NO</th>
              <th scope="col">US Plate No</th>
              <th scope="col">MX Plate</th>
              <th scope="col">Maker</th>
              <th scope="col">Model</th>
              <th scope="col">Year</th>
              <th scope="col">Color</th>
              <th scope="col">Owner No</th>
              <th scope="col">Owner name</th>
              <th scope="col">Driver ID</th>
              <th scope="col">Driver name</th>
              <th scope="col">Registration Name</th>
              <th scope="col">RFID Tag</th>
              <th scope="col">Delete</th>
              <th scope="col">Edit</th>
            </tr>
          </thead>

          <tbody>
            {{#each b_division}}
            <tr>
              {{!-- <td>{{this.id}}</td> --}}
              <td style="width:50px">{{this.information_truck_no}}</td>
              <td style="width:50px">{{this.information_truck_us_plate_no}}</td>
              <td style="width:100px">{{this.information_truck_mx_plate}}</td>
              <td style="width:50px">{{this.information_truck_maker}}</td>
              <td style="width:100px">{{this.information_truck_model}}</td>
              <td style="width:50px">{{this.information_truck_year}}</td>
              <td style="width:100px">{{this.information_truck_color}}</td>
              <td style="width:50px">{{this.information_truck_owner_no}}</td>
              <td style="width:100px">{{this.information_truck_owner_name}}</td>
              <td style="width:50px">{{this.information_truck_driver_id}}</td>
              <td style="width:100px">{{this.information_truck_driver_name}}</td>
              <td style="width:50px">{{this.information_truck_registration_name}}</td>
              <td style="width:100px">{{this.information_truck_rfid_tag}}</td>
              <td style="width:50px"><a href="/information_pages/delete_information_truck/{{this.id}}">Delete</a>
              </td>
              <td style="width:50px"><a href="/information_pages/edit_information_truck/{{this.id}}">Edit</a></td>
            </tr>
            {{/each}}
          </tbody>

        </table>

      </form>
      <!--END OF FORM ^^-->
    </fieldset>

    <hr />
  </div>


