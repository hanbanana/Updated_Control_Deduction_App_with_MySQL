<div style="margin-left: 200px; margin-right: 200px; font-size: 13px">

  <br>
  <h2>Part Payment History List</h2>
  {{!-- <label class="heading">Owner History</label> --}}
  <br>
  {{!-- <a href="/input_pages/create_input_truck_payment" style="font-size: 20px">Create</a> --}}
  <br><br>

  <div class="form-group" style="width: 1000px">
    <fieldset>
      <form action="" class="form-group">

        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
            <tr>
              {{!-- <th scope="col" data-sortable="true">ID#</th> --}}
              <th scope="col">Status</th>
              <th scope="col">Type</th>
              <th scope="col">Truck NO</th>
              <th scope="col">Owner Id</th>
              <th scope="col">Driver No</th>
              <th scope="col">Invoice No</th>
              <th scope="col">Amount</th>
              <th scope="col">Pay/week</th>
              <th scope="col">Date</th>
              <th scope="col">Add Pay</th>
              <th scope="col">CR</th>
              <th scope="col">Invoice</th>
              <th scope="col">DESC</th>
              <th scope="col">Delete</th>
              <th scope="col">Edit</th>
            </tr>
          </thead>

          <tbody>
            {{#each partPurchsetData}}
            <tr>
              {{!-- <td>{{this.id}}</td> --}}
              <td style="width:50px">{{this.input_part_purchase_status}}</td>
              <td style="width:100px">{{this.input_part_purchase_type}}</td>
              <td style="width:50px">{{this.input_part_purchase_truck_no}}</td>
              <td style="width:100px">{{this.input_part_purchase_owner_id}}</td>
              <td style="width:50px">{{this.input_part_purchase_driver_id}}</td>
              <td style="width:100px">{{this.input_part_purchase_invoice_no}}</td>
              <td style="width:50px">{{this.input_part_purchase_amount}}</td>
              <td style="width:100px">{{this.input_part_purchase_pay_week}}</td>
              <td style="width:50px">{{this.input_part_purchase_date}}</td>
              <td style="width:100px">{{this.input_part_purchase_add_pay}}</td>
              <td style="width:100px">{{this.input_part_purchase_cr}}</td>
              <td style="width:100px">{{this.input_part_purchase_invoice}}</td>
              <td style="width:50px">{{this.input_part_purchase_desc}}</td>
              <td style="width:50px"><a href="/input_pages/delete_input_part_purchase/{{this.id}}">Delete</a>
              </td>
              <td style="width:50px"><a href="/input_pages/edit_input_part_purchase/{{this.id}}">Edit</a></td>
            </tr>
            {{/each}}
          </tbody>

        </table>

      </form>
      <!--END OF FORM ^^-->
    </fieldset>

    <hr />
  </div>


</div>



<script type="text/javascript">

  $(document).ready(function () {
    $('#example').DataTable();
  });

</script>