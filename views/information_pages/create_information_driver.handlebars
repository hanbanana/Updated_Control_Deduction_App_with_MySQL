<script type="text/javascript">


    $("#createplan").on("submit", function (event) {
        // Make sure to preventDefault on a submit event.
        event.preventDefault();

        var newPlan = {
            information_driver_no: $("#NO").val().trim(),
            information_driver_name: $("#Name").val().trim(),
            information_driver_license_id: $("#licenseId").val().trim(),
            information_driver_rfc: $("#RFC").val().trim(),
            information_driver_ife: $("#IFE").val().trim(),
            information_driver_address: $("#Address").val().trim(),
        };

        // Send the POST request.
        $.ajax("/information_driver_list", {
            type: "POST",
            data: newPlan
        }).then(
            function () {
                console.log("created new plan");
                // Reload the page to get the updated list
                location.assign("/information_driver");
            }
        );
    });

</script>