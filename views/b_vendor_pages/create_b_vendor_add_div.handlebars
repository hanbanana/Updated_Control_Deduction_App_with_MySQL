  {{!-- On One Line Form- --}}
  <div class="formDiv">

    <form id="createplan">

      <div class="form-group-sm row">
        <div class="col-sm">


<div class="row">
    <div class="col-sm-12">
      <button type="button" class="form-control text-right nominal">
        <span class="pull-left">Pilih nominal</span><span class="caret caret-right"></span>
      </button>
      <ul class="instead-option list-unstyled">
              {{#each b_vendor_division}}
        <li><a href="/b_vendor_pages/create_b_vendor_add_div_2/{{this.id}}">Select</a>{{this.div_code}} 
        </li>      {{/each}}

      </ul>
    </div>
  </div>



          {{!-- select from DB --}}
          <label for="ex3">DIV</label>
          <select onChange="window.location.href=this.value" class="form-control form-control-sm" name="Div" id="Div" required style="width: 100px">
            <option value="" disabled selected>Choose...</option>
            {{#each b_vendor_division}}
            <option value="/b_vendor_pages/create_b_vendor_add_div_2/{{this.id}}">{{this.div_code}}</option>
             <a href="/b_vendor_pages/create_b_vendor_add_div_2/{{this.id}}">Edit</a>
           
                  {{/each}}
            {{!-- <option>Pending</option> --}}
          </select>
         
    
          <br>

     

         
        </div>

      </div>

    </form>

    {{!-- <button class="btn btn-secondary btn-sm" style="margin-top: 25px"
        onclick="window.location.href='/master_division'">Cancel</button> --}}
    <br>

  </div>

</div>
<br>

<script type="text/javascript">


  $("#createplan").on("submit", function (event) {
    // Make sure to preventDefault on a submit event.
    event.preventDefault();

    var newPlan = {
      vendor_div: $("#Div").val().trim(),
      vendor_vendor_code: $("#Code").val().trim(),
      vendor_vendor_name: $("#Name").val().trim(),
      vendor_registration_name_1: $("#Registration_1").val().trim(),
      vendor_registration_name_2: $("#Registration_2").val().trim(),
      vendor_registration_address: $("#Registration_address").val().trim(),
      vendor_lien_holder: $("#Lien_Holder").val().trim(),

    };

    // Send the POST request.
    $.ajax("/b_vendor_list", {
      type: "POST",
      data: newPlan
    }).then(
      function () {
        console.log("created new plan");
        // Reload the page to get the updated list
        location.assign("/master_vendor");
      }
    );
  });

</script>