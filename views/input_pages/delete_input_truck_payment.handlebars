<div style="margin-left: 200px; margin-right: 200px; font-size: 13px">
    <br>
    <h2>Truck Payment</h2>
    <br>
    <p style="font-size: 20px; font-weight: 600">Delete</p>
    <br>

    {{!-- On One Line Form- --}}
    <div class="formDiv">
        <form data-id="{{this.id}}" class="update-form">
            <div class="form-group-sm row">
                <div class="col-sm">
                    <label for="ex1">Truck NO</label>
                    <input class="form-control form-control-sm" placeholder="truckNo" name="truckNo" id="truckNo"
                        value="{{this.input_truck_payment_truck_no}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex2">Owner No</label>
                    <input class="form-control form-control-sm" placeholder="ownerId" name="ownerId" id="ownerId"
                        value="{{this.input_truck_payment_owner_no}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex1">Owner Name</label>
                    <input class="form-control form-control-sm" placeholder="ownerName" name="ownerName" id="ownerName"
                        value="{{this.input_truck_payment_owner_name}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex2">Driver No</label>
                    <input class="form-control form-control-sm" placeholder="payMonth" name="payMonth" id="payMonth"
                        value="{{this.input_truck_payment_driver_no}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex2">Driver Name</label>
                    <input class="form-control form-control-sm" placeholder="driverName" name="driverName"
                        id="driverName" value="{{this.input_truck_payment_driver_name}}" style="width: 200px" disabled>
                    <br>
                </div>
                <div class="col-sm">
                    <label for="ex1">Truck Total Amount</label>
                    <input class="form-control form-control-sm" placeholder="truckTotalAmount" name="truckTotalAmount"
                        id="truckTotalAmount" value="{{this.input_truck_payment_truck_total_amount}}"
                        style="width: 200px" disabled>
                    <br>
                    <label for="ex2">Down Payment</label>
                    <input class="form-control form-control-sm" placeholder="downPayment" name="downPayment"
                        id="downPayment" value="{{this.input_truck_payment_down_payment}}" style="width: 200px"
                        disabled>
                    <br>
                    <label for="ex1">Sale Date</label>
                    <input class="form-control form-control-sm" placeholder="saleDate" name="saleDate" id="saleDate"
                        value="{{this.input_truck_payment_sale_date}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex2">Pay/month</label>
                    <input class="form-control form-control-sm" placeholder="payMonth" name="payMonth" id="payMonth"
                        value="{{this.input_truck_payment_pay_month}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex2">Paid Amount</label>
                    <input class="form-control form-control-sm" placeholder="paidAmount" name="paidAmount"
                        id="paidAmount" value="{{this.input_truck_payment_paid_amount}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex2">Balance Amount</label>
                    <input class="form-control form-control-sm" placeholder="balanceAmount" name="balanceAmount"
                        id="balanceAmount" value="{{this.input_truck_payment_balance_amount}}" style="width: 200px"
                        disabled>
                    <br>


                </div>
            </div>
            <div class="form-group-sm row">
                <button type="submit" class="btn btn-secondary btn-sm" style="margin-top: 25px">Delete</button>


            </div>
        </form>
        <div class="form-group-sm row">
            <button class="btn btn-secondary btn-sm" style="margin-top: 25px"
                onclick="window.history.back()">Cancel</button>
            {{!-- <button class="btn btn-secondary btn-sm" style="margin-top: 25px"
        onclick="window.location.href='/master_division'">Cancel</button> --}}
            <br>
        </div>
    </div>

</div>
<br>


<script type="text/javascript">

    $(".update-form").on("submit", function (event) {
        // Make sure to preventDefault on a submit event.
        event.preventDefault();


        var id = $(this).data("id");
        // Send the PUT request.
        $.ajax("/input_truck_payment_list/" + id, {
            type: "DELETE",

        }).then(
            function () {
                console.log("updated!");
                // Reload the page to get the updated list
                location.assign("/input_truck_payment");
            }
        );
    });

    function goBack() {
        window.history.back();
    }

</script>