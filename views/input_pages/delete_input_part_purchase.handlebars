    {{!-- On One Line Form- --}}
    <div class="formDiv">
        <form data-id="{{this.id}}" class="update-form">
            <div class="form-group-sm row">
                <div class="col-sm">
                    <label for="ex1">Status</label>
                    <input class="form-control form-control-sm" placeholder="Status" name="Status" id="Status"
