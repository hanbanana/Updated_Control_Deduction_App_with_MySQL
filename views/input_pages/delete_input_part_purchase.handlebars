                    <br>
                    <label for="ex2">Type</label>
                    <input class="form-control form-control-sm" placeholder="Type" name="Type" id="Type"
                        value="{{this.input_part_purchase_type}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex1">Truck NO</label>
                    <input class="form-control form-control-sm" placeholder="truckNo" name="truckNo" id="truckNo"
                        value="{{this.input_part_purchase_truck_no}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex2">Owner Id</label>
                    <input class="form-control form-control-sm" placeholder="ownerId" name="ownerId" id="ownerId"
                        value="{{this.input_part_purchase_owner_id}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex2">Driver No</label>
                    <input class="form-control form-control-sm" placeholder="driverId" name="driverId" id="driverId"
                        value="{{this.input_part_purchase_driver_id}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex1">Invoice No</label>
                    <input class="form-control form-control-sm" placeholder="invoiceNo" name="invoiceNo" id="invoiceNo"
                        value="{{this.input_part_purchase_invoice_no}}" style="width: 200px" disabled>
                    <br>
                </div>
                <div class="col-sm">
                    <label for="ex1">Amount</label>
                    <input class="form-control form-control-sm" placeholder="Amount" name="Amount" id="Amount"
                        value="{{this.input_part_purchase_amount}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex2">Pay/week</label>
                    <input class="form-control form-control-sm" placeholder="payWeek" name="payWeek" id="payWeek"
                        value="{{this.input_part_purchase_pay_week}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex1">Date</label>
                    <input class="form-control form-control-sm" placeholder="Date" name="Date" id="Date"
                        value="{{this.input_part_purchase_date}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex2">Add Pay</label>
                    <input class="form-control form-control-sm" placeholder="addPay" name="addPay" id="addPay"
                        value="{{this.input_part_purchase_add_pay}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex2">CR</label>
                    <input class="form-control form-control-sm" placeholder="CR" name="CR" id="CR"
                        value="{{this.input_part_purchase_cr}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex2">Invoice</label>
                    <input class="form-control form-control-sm" placeholder="Invoice" name="Invoice" id="Invoice"
                        value="{{this.input_part_purchase_invoice}}" style="width: 200px" disabled>
                    <br>
                    <label for="ex2">DESC</label>
                    <input class="form-control form-control-sm" placeholder="DESC" name="DESC" id="DESC"
                        value="{{this.input_part_purchase_desc}}" style="width: 200px" disabled>
                    <br>


                </div>
            </div>
            <div class="form-group-sm row">
                <button type="submit" class="btn btn-secondary btn-sm" style="margin-top: 25px">Delete</button>


            </div>
        </form>
        <div class="form-group-sm row">
            <button class="btn btn-secondary btn-sm" style="margin-top: 25px"
                onclick="window.history.back()">Cancel</button>
            {{!-- <button class="btn btn-secondary btn-sm" style="margin-top: 25px"
        onclick="window.location.href='/master_division'">Cancel</button> --}}
            <br>
        </div>
    </div>

</div>
<br>


<script type="text/javascript">

    $(".update-form").on("submit", function (event) {
        // Make sure to preventDefault on a submit event.
        event.preventDefault();


        var id = $(this).data("id");
        // Send the PUT request.
        $.ajax("/input_part_purchase_list/" + id, {
            type: "DELETE",

        }).then(
            function () {
                console.log("updated!");
                // Reload the page to get the updated list
                location.assign("/input_part_purchase");
            }
        );
    });

    function goBack() {
        window.history.back();
    }

</script>