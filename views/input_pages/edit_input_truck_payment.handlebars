                        {{#each ownerData}}
                        <option value="{{this.information_owner_name}}">{{this.information_owner_name}}</option>
                        {{/each}}
                        {{!-- <option>Pending</option> --}}
                    </select>
                    <br>
                    {{#each truckPaymentData}}
                    <label for="ex3">Driver No</label>
                    <select class="form-control form-control-sm" name="driverId" id="driverId" required
                        style="width: 100px">
                        <option value="{{this.input_truck_payment_driver_id}}" selected>
                            {{this.input_truck_payment_driver_id}}</option>
                        {{/each}}
                        {{#each driverData}}
                        <option value="{{this.information_driver_no}}">{{this.information_driver_no}}</option>
                        {{/each}}
                        {{!-- <option>Pending</option> --}}
                    </select>
                    <br>
                    {{#each truckPaymentData}}
                    <label for="ex3">Driver Name</label>
                    <select class="form-control form-control-sm" name="driverName" id="driverName" required
                        style="width: 100px">
                        <option value="{{this.input_truck_payment_driver_name}}" selected>
                            {{this.input_truck_payment_driver_name}}</option>
                        {{/each}}
                        {{#each driverData}}
                        <option value="{{this.information_driver_name}}">{{this.information_driver_name}}</option>
                        {{/each}}
                        {{!-- <option>Pending</option> --}}
                    </select>
                    <br>

                </div>
                <div class="col-sm">
                    {{#each truckPaymentData}}
                    <label for="ex2">Truck Total Amount</label>
                    <input class="form-control form-control-sm" placeholder="truckTotalAmount" name="truckTotalAmount"
                        id="truckTotalAmount" type="text" value="{{this.input_truck_payment_truck_total_amount}}"
                        maxlength="45" required style="width: 200px">
                    <br>
                    <label for="ex1">Down Payment</label>
                    <input class="form-control form-control-sm" placeholder="downPayment" name="downPayment"
                        id="downPayment" type="text" value="{{this.input_truck_payment_down_payment}}" maxlength="45"
                        required style="width: 200px">
                    <br>
                    <label for="ex1">Sale Date</label>
                    <input class="form-control form-control-sm" placeholder="saleDate" name="saleDate" id="saleDate"
                        type="text" value="{{this.input_truck_payment_sale_date}}" maxlength="45" required
                        style="width: 200px">
                    <br>
                    <label for="ex1">Pay/month</label>
                    <input class="form-control form-control-sm" placeholder="payMonth" name="payMonth" id="payMonth"
                        type="text" value="{{this.input_truck_payment_pay_month}}" maxlength="45" required
                        style="width: 200px">
                    <br>
                    <label for="ex2">Paid Amount</label>
                    <input class="form-control form-control-sm" placeholder="paidAmount" name="paidAmount"
                        id="paidAmount" type="text" value="{{this.input_truck_payment_paid_amount}}" maxlength="200px"
                        required style="width: 200px">
                    <br>
                    <label for="ex1" id='balanceId'>Balance Amount</label>
                    <p style='border: 2px solid grey; border-radius: .2rem; padding-top: 2px; padding-left: 5px; width: 200px; height: 30px'
                        id="balanceAmount" required></p>
                    {{/each}}
                </div>
            </div>
            <div class="form-group-sm row">
                <button type="submit" class="btn btn-secondary btn-sm" style="margin-top: 25px">Save</button>


            </div>
    </div>
    </form>
    <div class="form-group-sm row">
        <button class="btn btn-secondary btn-sm" style="margin-top: 25px"
            onclick="window.history.back()">Cancel</button>
        {{!-- <button class="btn btn-secondary btn-sm" style="margin-top: 25px"
