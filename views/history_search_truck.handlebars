    <script type="text/javascript">


        $("#truckNoSearchHistory").on("submit", function (event) {
            event.preventDefault();
            var url = "/history_pages/list_truck_payment_history/"
            var resultTotalValue = $("#truckNo").val().trim();
            var goToUrlWithTotalValue = url + resultTotalValue;
            //this will redirect us in new tab
            location.href = goToUrlWithTotalValue;
        });

    </script>