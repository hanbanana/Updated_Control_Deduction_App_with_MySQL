            value="{{this.input_truck_payment_truck_no}}" style="width: 200px" disabled>
          <br>
          <label for="ex2">Owner No</label>
          <input class="form-control form-control-sm" placeholder="ownerId" name="ownerId" id="ownerId"
            value="{{this.input_truck_payment_owner_id}}" style="width: 200px" disabled>
          <br>
          <label for="ex1">Owner Name</label>
          <input class="form-control form-control-sm" placeholder="ownerName" name="ownerName" id="ownerName"
            value="{{this.input_truck_payment_owner_name}}" style="width: 200px" disabled>
          <br>
          <label for="ex2">Driver No</label>
          <input class="form-control form-control-sm" placeholder="driverId" name="driverId" id="driverId"
            value="{{this.input_truck_payment_driver_id}}" style="width: 200px" disabled>
          <br>
          <label for="ex2">Driver Name</label>
          <input class="form-control form-control-sm" placeholder="driverName" name="driverName" id="driverName"
            value="{{this.input_truck_payment_driver_name}}" style="width: 200px" disabled>
          <br>
          {{/each}}
        </div>
        <div class="col-sm">
          {{#each truckPaymentData}}
          <label for="ex2">Truck Total Amount</label>
          <input class="form-control form-control-sm" placeholder="truckTotalAmount" name="truckTotalAmount"
            id="truckTotalAmount" type="text" value="{{this.input_truck_payment_truck_total_amount}}" maxlength="45"
            disabled style="width: 200px">
          <br>
          <label for="ex1">Down Payment</label>
          <input class="form-control form-control-sm" placeholder="downPayment" name="downPayment" id="downPayment"
            type="text" value="{{this.input_truck_payment_down_payment}}" maxlength="45" disabled style="width: 200px">
          <br>
          <label for="ex1">Sale Date</label>
          <input class="form-control form-control-sm" placeholder="saleDate" name="saleDate" id="saleDate" type="text"
            value="{{this.input_truck_payment_sale_date}}" maxlength="45" disabled style="width: 200px">
          <br>
          <label for="ex1">Pay/month</label>
          <input class="form-control form-control-sm" placeholder="payMonth" name="payMonth" id="payMonth" type="text"
            value="{{this.input_truck_payment_pay_month}}" maxlength="45" disabled style="width: 200px">
          <br>
          <label for="ex2">Paid Amount</label>
          <input class="form-control form-control-sm" placeholder="paidAmount" name="paidAmount" id="paidAmount"
            type="text" value="{{this.input_truck_payment_paid_amount}}" maxlength="200px" disabled
            style="width: 200px">
          <br>
          <label for="ex1">Balance Amount</label>
          <input class="form-control form-control-sm" placeholder="balanceAmount" name="balanceAmount"
            id="balanceAmount" type="text" value="{{this.input_truck_payment_balance_amount}}" maxlength="200px"
            disabled style="width: 200px">
          {{/each}}
        </div>
        <div class="col-sm">
          {{#each truckPaymentData}}
          <label for="ex2">This Time Payment</label>
          <input class="form-control form-control-sm" placeholder="thisTimePayment" name="thisTimePayment"
